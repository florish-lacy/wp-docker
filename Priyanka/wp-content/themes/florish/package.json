{
  "name": "florish",
  "version": "1.0.0",
  "description": "Florish WP Theme",
  "author": "Florish",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "devDependencies": {
    "@wordpress/scripts": "^27.2.0",
    "autoprefixer": "^10.4.17",
    "bootstrap": "^5.3.3",
    "browser-sync": "^3.0.2",
    "dir-archiver": "^2.1.0",
    "htmlhint": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "rtlcss": "^4.1.1",
    "sass": "^1.71.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-twbs-bootstrap": "^14.0.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "dev": "npm-run-all build:scss watch",
    "build": "npm-run-all build:css",
    "build:css": "npm-run-all build:scss:prod build:css:prefix build:css:rtl",
    "build:css:prefix": "postcss --replace assets/css/style.css --use autoprefixer --map",
    "build:css:rtl": "rtlcss assets/css/style.css assets/css/style-rtl.css",
    "build:php": "npm-run-all --continue-on-error --parallel build:php:*",
    "build:php:composer": "composer dump-autoload",
    "build:php:docker": "docker exec -w /var/www/html/wp-content/themes/florish florish-wordpress-1 composer dump-autoload",
    "build:scss": "sass assets/scss/:assets/css --load-path=node_modules",
    "build:scss:prod": "npm run build:scss -- --no-source-map --style compressed",
    "lint:js": "wp-scripts lint-js 'assets/js/*.js'",
    "lint:css": "wp-scripts lint-style 'assets/css/style.css' --fix",
    "lint:scss": "stylelint 'assets/scss/**/*.scss' --fix",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "npm run build:scss -- --watch",
    "watch:sync": "browser-sync start --config bs-config.js",
    "zip": "dir-archiver --src . --dest ../theme.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock"
  },
  "browserslist": [
    "last 4 versions",
    "> 10%"
  ]
}
