{
  "name": "florish",
  "version": "0.0.1",
  "description": "Florish Co, WordPress site, theme, and MySQL database. This exists as an extension of the main package.json file, which is located in themes/florish.",
  "license": "MIT",
  "workspaces": [
    "Florish/wp-content/themes/florish/"
  ],
  "scripts": {
    "start": "npm-run-all up dev",
    "up": "docker-compose up --detach",
    "down": "docker-compose down",
    "destroy": "docker-compose down --volumes",
    "build:docker": "docker-compose build",
    "build:theme": "npm run x -- build",
    "css": "npm run x -- css",
    "dev": "npm run x -- dev",
    "x": "npm run --workspace=florish"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
